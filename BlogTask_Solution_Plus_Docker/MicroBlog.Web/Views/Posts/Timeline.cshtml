@model List<MicroBlog.Web.Models.PostDto>
    @{
        ViewData["Title"] = "Timeline";
    }

<h2>Timeline</h2>

    @if (Model.Count == 0)

    {
    <p>No posts yet.</p>
    }

    else

    {

        foreach (var post in Model.OrderByDescending(p => p.CreatedAt))

        {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@post.UserName</h5>
                <p class="card-text">@post.Text</p>
                <p class="text-muted">@post.CreatedAt.ToLocalTime().ToString("g")</p>
                    @if (!string.IsNullOrEmpty(post.ImageUrl))

                    {
                    <img src="@post.ImageUrl" class="img-fluid" alt="Post Image" />
                    }
            </div>
        </div>
        }

    }
